{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "es2020"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
  ]
}